#!/bin/bash

source ~/.linux/bin/ascii.sh
echo ''

if [ $# -eq 0 ]; then
	SUB=$(gum choose "Font" "Install" --height 6 --header "" | tr '[:upper:]' '[:lower:]')
	# SUB=$(gum choose "Theme" "Font" "Install" "Update" --height 8 --header "" | tr '[:upper:]' '[:lower:]')
else
	SUB=$1
fi

[ -n "$SUB" ] && source ~/.linux/bin/$SUB
